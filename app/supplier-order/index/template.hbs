{{#if didAttemptDelete}}
  <McModal
    @canShowModal={{didAttemptDelete}}
    @perform={{action "confirmDelete" confirmDelete}}
    @message="Are you sure you want to delete this item?"
  />
{{/if}}
{{#if canPreviewOrder}}
  <div class="preview-form__wrapper">
    <Forms::PreviewSupplierOrder
      @cancel={{action "cancelPreview"}}
      @didConfirmDelete={{action "confirmDelete"}}
      {{!-- @managers={{managers}} --}}
      {{!-- @customers={{customers}} --}}
      @order={{selectedOrder}}
      {{!-- @b_units={{b_units}} --}}
    />
  </div>
{{/if}}
<ContentPane
  @aside={{help}}
>
  <McWrapper
    @heading="Supplier orders"
    @role="Add order"
    @hasAction={{false}}
    @actionName={{title}}
    @perform={{action "perform" }}
  >
  <div class="faint"> Showing {{model.length}} supplier order(s)</div>
  <div class="mc-divider m-b-15"></div>
  {{#each model as |order| }}
    <SupplierOrderCard
      @order={{order}}
      @didSelect={{action "didSelectOrder" order}}
      @didDelete={{action "didDelete" order}}
    />
    <div class="mc-divider m-b-15"></div>
  {{/each}}
  {{#infinity-loader 
    infinityModel=model
    hideOnInfinity=true
  }}
    <div class="ui active centered inline large loader"></div>
  {{/infinity-loader}}
  </McWrapper>
</ContentPane>


