<Layout 
  @aside={{help}}>
  {{#with (changeset model.company (action "validate")) as |changesetObj|}}
    <McForm
      @heading="Add new company"
      @role="Add this company"
      @didPerform={{action "createNewCompany" changesetObj}}
      @didDecline={{action "cancel" changesetObj}}
      @isSaving={{isSaving}}>
      <div class="mc-divider">Company Details</div>
      <div class="form-group">
        <div class="inline field">
          <label for="company name">Company name</label>
          <FormFields::Input
            @placeholder="What is the name of the company?"
            @changeset={{changesetObj}}
            @property="name"
            @didValidate={{action "validate" changesetObj}}
          />
        </div>
        <div class="inline field">
          <label for="company name">Company Phone</label>
          <FormFields::Input
            @placeholder="What is the phone number for the company?"
            @changeset={{changesetObj}}
            @property="phone"
            @didValidate={{action "validate" changesetObj}}
          />
        </div>
        <div class="inline field">
          <label for="company name">Company Email</label>
          <FormFields::Input
            @placeholder="What is the email for the company?"
            @changeset={{changesetObj}} 
            @property="email"
            @didValidate={{action "validate" changesetObj}}
          />
        </div>
        <div class="inline field">
          <label for="company name">Company Website</label>
          <FormFields::Input
            @placeholder="Enter the website url for the company"
            @changeset={{changesetObj}}
            @property="website"
            @didValidate={{action "validate" changesetObj}}
          />
        </div>
        <div class="inline field">
          <label for="company name">Address</label>
          <FormFields::Input 
            @placeholder="Enter the address for the compnay"
            @changeset={{changesetObj}}
            @didValidate={{action "validate" changesetObj}}
            @property="address"
          />
        </div>
        <div class="inline field">
          <label for="Compnany Type">Company Type</label>
          <FormFields::Dropdown 
            @options={{model.types}}
            @changeset={{changesetObj}}
            @property="type_id"
          />
        </div> 
      </div>
      <div class="mc-divider">Background Information <span class="faint" >(bio, history, etc)</span> </div>
      <div class="form-group">
        <div class="">
          <FormFields::Textarea
            @columns=""
            @rows={{5}}
            @property="background"
            @changeset={{changesetObj}}
          />
        </div>
      </div>
    </McForm>
  {{/with}}
</Layout>
