<Layout 
  @aside={{help}}>
  <McForm
    @heading="Add new company"
    @role="Add this company">
    <div class="form-group">
      <div class="inline field">
        <label for="company name">Company name</label>
        <FormFields::Input
          @placeholder="What is the name of the company?" 
        />
      </div>
      <div class="inline field">
        <label for="company name">Company Phone</label>
        <FormFields::Input
          @placeholder="What is the phone number for the company?" 
        />
      </div>
      <div class="inline field">
        <label for="company name">Company Email</label>
        <FormFields::Input
          @placeholder="What is the email for the company?" 
        />
      </div>
      <div class="inline field">
        <label for="company name">Company Website</label>
        <FormFields::Input
          @placeholder="Enter the website url for the company" 
        />
      </div>
      <div class="inline field">
        <label for="company name">Address</label>
        <FormFields::Input 
          @placeholder="Enter the address for the compnay"
        />
      </div>
      <div class="inline field">
        <label for="Compnany Type">Company Type</label>
        <FormFields::Dropdown />
      </div> 
    </div>
  </McForm>
</Layout>
