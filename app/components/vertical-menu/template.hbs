<div class="v-menu__wrapper">
  <div class="ui vertical accordion text menu">
    <div class="p-t-20">
      <span>
        <LinkTo @route="authenticated.index" class="content menu icon-text active">
          <span>
            {{svg-jar "flag" width="16px" height="16px"}}
          </span>
          Latest Activities
        </LinkTo>
      </span>
    </div>
    <div class="mc-divider"></div>
    {{#each menus as |menu| }}
      <div class="item">
        <a class="title">
          <i class="dropdown icon"></i>
          <span>{{menu.name}}</span>
        </a>
        <div class="content menu">
          {{#each menu.submenus as |sub|}}
            <LinkTo @route={{sub.link}} class="item">
              {{sub.name}}
            </LinkTo>
          {{/each}}
        </div>
      </div>
    {{/each}}
    <div class="mc-divider"></div>
    <div class="p-t-20">
      <span>
        <LinkTo @route="authenticated.index" class="content menu icon-text">
        <span>
          {{svg-jar "trash" width="14px" height="14px"}}
        </span>
          Trash can
        </LinkTo>
      </span>
    </div>
  </div>    
</div>
