<McModal
  @canShowModal={{canShowModal}}
  @message={{title}}
  @perform={{action "confirmDelete"}}
/>
<div class="ui container edit-form transparent p-t-80 p-b-80">
  <McForm
    @heading="Preview supplier order"
    @role={{role}}
    @didDecline={{action "cancel"}}
    @isSaving={{isSaving}}
    @canPerform={{canPerform}}
    @didPerform={{action 'didPerform'}}
  >
  <div class="mc-divider">
    Showing details for an order created on
    <span class="action primary">{{moment-format order.date "ddd, MMM d YYYY"}}</span>
  </div>
  <div class="form-group">
    <div class="ui right labeled input inline field">
      <label for="company name">
        Order Amount
      </label>
      <div class="ui label small">{{changeset-get order "order_id.currency_id.name"}} {{order.amount}}</div>
    </div>
    <div class="ui right labeled input inline field">
      <label for="Customer">
        Customer
      </label>
      <div class="ui label small">
        {{changeset-get order "order_id.customer_id.name"}}
      </div>
    </div> 
    <div class="ui right labeled input inline field">
      <label for="Customer">
        Manufacturer
      </label>
      <div class="ui label small">
        {{changeset-get order "manufacturer_id.name"}}
      </div>
    </div> 
    <div class="m-t-20">
      <span class="faint">
        This order was created by
        <span class="action ui primary">
          {{changeset-get order "order_id.user_id.fullname"}}
        </span>
      </span>
      <span class="faint">
        and managed by
        <span class="action ui primary">
          {{changeset-get order "order_id.account_manager_id.full_name"}}
        </span>
      </span>
    </div>
  </div>
  <div class="mc-divider faint">Oder description</div>
  <div class="form-groups m-t-20 m-b-20">
    <div class="ui label">
      {{order.description}}
    </div>
  </div> 
  <div class="m-b-20">This is order has {{order.business_unit_orders_attributes.length}}business unit order(s) and
    {{order.manufacturer_orders_attributes.length}} manufacturer order(s)
  </div>
  {{#if (changeset-get order "business_unit_orders_attributes")}}
    <div class="embedded-caption">
      <div class="embedded-caption__header grid equal-columns__2 m-b-20">
        <div><h5>Business unit</h5></div>
        <div><h5>Amount</h5></div>
      </div>
      <div class="grid equal-columns__2">
        {{#each (changeset-get order "business_unit_orders_attributes") as |b_unit_order|}}
          <div>{{b_unit_order.business_unit_id.name}}name </div>
          <div>{{b_unit_order.amount}}name</div>
        {{/each}}
      </div>
    </div>
  {{/if}}
  {{#if (changeset-get order "manufacturer_orders_attributes")}}
    <div class="embedded-caption m-t-20">
      <div class="embedded-caption__header grid equal-columns__2 m-t-20 m-b-20">
        <div><h5>Manufacturer</h5></div>
        <div><h5>Amount</h5></div>
      </div>
      <div class="grid equal-columns__2">
        {{#each order.manufacturer_orders_attributes as |m_order|}}
          <div>{{m_order.manufacturer_id.name}}</div>
          <div>{{m_order.amount}}</div>
        {{/each}}
      </div>
    </div>
  {{/if}}
  <div class="action m-t-40 m-b-40">
    <span>
      You can <span class="danger" role="button" {{action "deleteOrder"}} >Delete this order</span> or if you want to make changes,
      <span class="success">
        <LinkTo @route="supplier-order.edit" @model={{order.id}}>
          Edit this order
        </LinkTo>
      </span>
    </span>
  </div>
  </McForm>
</div>